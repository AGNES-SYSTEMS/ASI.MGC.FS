@{
    ViewBag.Title = "Jobs List";
    Layout = null;
}
@model ASI.MGC.FS.Model.JOBIDREFERENCE
<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
    <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Jobs List</title>
</head>
<body>
    <div class="container">
        <div id="main">

            <div class="row">
                <div class="container">
                    <div class="row">
                        <div class="col-md-10">
                            <table id="tblJobsList"></table>
                            <div id="Pager"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/i18n/grid.locale-en.js"></script>
    <script src="~/Scripts/jquery.jqGrid.min.js"></script>
    <script>
        $(document).ready(function () {
            alert("I am in Jquery!");
            $("#tblJobsList").jqGrid({
                url: '/Job/getJobsList',
                datatype: "json",
                mtype: 'GET',
                colNames: ['Job ID', 'Job Description'],
                colModel: [
                { key: true, name: 'JOBID_JR', index: 'JOBID_JR' },
                { key: false, name: 'JOBDESCRIPTION_JR', index: 'JOBDESCRIPTION_JR' }
                ],
                pager: jQuery('#Pager'),
                rowNum: 10,
                rowList: [10, 20, 30, 40],
                height: '100%',
                viewrecords: true,
                caption: "Job Details List",
                emptyrecords: "No Jobs to Display",
                jsonReader: {
                    root: "rows",
                    page: "page",
                    total: "total",
                    records: "records",
                    repeatitems: false
                },
                autowidth: true,
                multiselect: false
            });
        });
    </script>
</body>
</html>
