@{
    ViewBag.Title = "UnitMeasurement";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.currPage = "Unit Measurement";
}
@model ASI.MGC.FS.Model.UNITMESSUREMENT
<!-- start:main -->
<div class="container">
    <div id="main">
        <!-- start:breadcrumb -->
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">@ViewBag.currPage</li>
        </ol>
        <!-- end:breadcrumb -->
        <fieldset>
            <legend>Unit Details</legend>
            <div class="row">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-11">
                            <div id="grid">
                                <section>
                                    <button class="btn btn-primary" data-toggle="modal" data-target="#UnitMeasureModel">
                                        Add New Unit
                                    </button>
                                </section>
                                <br /> <br />
                                <section>
                                    <div class="row">
                                        <div class="col-md-12 form-group">
                                            <div class="col-md-12 input-group paddingLeftRight0">
                                                @Html.TextBox("searchUnit", null, new { ID = "txtUnitSearch", Class = "form-control" })
                                                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <table id="tblUnitDetails"></table>
                                    <div id="Pager"></div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>
<div class="container">
    <div class="modal fade" id="UnitMeasureModel" tabindex="-1" role="dialog" aria-labelledby="UnitMeasureModelLabel" aria-hidden="true" data-backdrop="false">
        <div class="modal-dialog modal-lg" style="width: 85%">
            <div class="modal-content">
                @using (Ajax.BeginForm("SaveUnitMeasurement", "Setups", null, new AjaxOptions { OnSuccess = "OnSuccess", OnFailure = "OnFailure" }, new { id = "formUnitMeasure", @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"
                                aria-hidden="true">
                            ×
                        </button>
                        <h4 class="modal-title">
                            Add Unit Details
                        </h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Unit Code</label>
                                <div class="col-md-8 paddingLeftRight0">
                                    @Html.TextBoxFor(d => d.UNIT_UM, null, new {ID = "txtUnitId", Class = "form-control"})
                                    @Html.ValidationMessageFor(d => d.UNIT_UM)
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Unit Detail</label>
                                <div class="col-md-8 paddingLeftRight0">
                                    @Html.TextBoxFor(d => d.DESCRIPTION_UM, null, new {ID = "txtUnitName", Class = "form-control"})
                                    @Html.ValidationMessageFor(d => d.DESCRIPTION_UM)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Unit Type</label>
                                <div class="col-md-8 paddingLeftRight0">
                                    @Html.TextBoxFor(d => d.TYPE_UM, null, new {ID = "txtUnitType", Class = "form-control"})
                                    @Html.ValidationMessageFor(d => d.TYPE_UM)
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Unit Quantity</label>
                                <div class="col-md-8 paddingLeftRight0">
                                    @Html.TextBoxFor(d => d.UNITQTY_UM, null, new {ID = "txtUnitQty", Class = "form-control"})
                                    @Html.ValidationMessageFor(d => d.UNITQTY_UM)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Basic Primary Quantity</label>
                                <div class="col-md-8 paddingLeftRight0">
                                    @Html.TextBoxFor(d => d.BASICPRIMARYQTY_UM, null, new { ID = "txtBasicQty", Class = "form-control" })
                                    @Html.ValidationMessageFor(d => d.BASICPRIMARYQTY_UM)
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Basic Primary Unit</label>
                                <div class="col-md-8 paddingLeftRight0">
                                    @Html.TextBoxFor(d => d.BASICPRIMARYUNIT_UM, null, new { ID = "txtBasicUnit", Class = "form-control" })
                                    @Html.ValidationMessageFor(d => d.BASICPRIMARYUNIT_UM)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">
                            Save
                        </button>
                        <button type="button" id="btnCancel" class="btn btn-warning">
                            Cancel
                        </button>
                        <button type="button" class="btn btn-default"
                                data-dismiss="modal">
                            Close
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- end:main -->
@section scripts
{
    <script src="@Url.Content("~/Scripts/Custom/Setups/UnitMeasurement.js")"></script>
<script type="text/javascript">

    function OnSuccess(response) {
        alert(response);
    }

    function OnFailure(response) {
        alert("Whoops! That didn't go so well did it?");
    }

</script>
}