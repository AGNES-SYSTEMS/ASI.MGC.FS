@{
    ViewBag.Title = "Search Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />*@
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrapValidator.min.css" rel="stylesheet" />
<div class="container">
    <div id="main">
        <!-- start:breadcrumb -->
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Search Details</li>
        </ol>
        <!-- end:breadcrumb -->
        <fieldset>
            <legend>Search Details</legend>
            <div class="row">
                <div class="container">
                    @using (Ajax.BeginForm("", "", null, new AjaxOptions { OnSuccess = "OnSuccess", OnFailure = "OnFailure" }, new { id = "formFindMrvDetails", @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Job No:</label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        @Html.TextBox("jobNo", null, new { ID = "txtJobNo", Class = "form-control" })
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-default" id="btnJobNoSearch">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Mrv No:</label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        @Html.TextBox("mrvNo", null, new { ID = "txtMrvNo", Class = "form-control" })
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-default" id="btnMrvNoSearch">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Customer Code:</label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        @Html.TextBox("custCode", null, new { ID = "txtCustCode", Class = "form-control" })
                                        <span class="input-group-btn">
                                            <button type="button" class="searchClass btn btn-default btn-md" id="btnCustCodeSearch">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Customer Name:</label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        @Html.TextBox("custName", null, new { ID = "txtCustName", Class = "form-control" })
                                        <span class="input-group-btn">
                                            <button type="button" class="searchClass btn btn-default btn-md" id="btnCustNameSearch">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label id="lblQty" class="control-label col-md-4 small ">Address:</label>
                                <div class="col-md-8 paddingLeftRight0">
                                    @Html.TextBox("address", null, new { ID = "txtAddress", Class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Telephone No:</label>
                                <div class="col-md-8">
                                    <div class="input-group">
                                        @Html.TextBox("telephoneNo", null, new { ID = "txtTelephoneNo", Class = "form-control" })
                                        <span class="input-group-btn">
                                            <button type="button" class="searchClass btn btn-default btn-md" id="btnTelephoneNoSearch">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="control-label col-md-4 small ">Employee:</label>
                                <div class="col-md-8 paddingLeftRight0">
                                    @Html.TextBox("employee", null, new { ID = "txtEmployee", Class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <fieldset>
                            <legend>Search Details</legend>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div id="grid" class="panel-body">
                                        <section id="unseen">
                                            <table id="tblMrvSearchDetails"></table>
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </fieldset>
    </div>
</div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/Custom/MRV/FindMrvDetails.js?2500")"></script>
    <script src="@Url.Content("~/Scripts/common.js")"></script>
    <script type="text/javascript">
        function OnSuccess(mrvNoJobList) {
        }

        function OnFailure() {
        }

    </script>
}