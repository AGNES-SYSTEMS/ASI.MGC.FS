@section scripts
{
    <script src="@Url.Content("~/Scripts/Custom/MRV/MRVCreation.js")"></script>
    <script src="@Url.Content("~/Scripts/common.js")"></script>
    <script type="text/javascript">
        function OnSuccess(mrvNoJobList) {
            if (mrvNoJobList.length !== 0) {
                toastr.success("Material Receipt Voucher is added Successfully.");
                openMrvReport(mrvNoJobList[0]);
                openJobReports(mrvNoJobList);
                //$("#formMRVCreation")[0].reset();
                //$('#tblMetarials').jqGrid("clearGridData");
                $("#btnSubmit").hide();
            }
            else
            {
                toastr.error("Sorry! Something went wrong, please try again.");
            }
        }

        function OnFailure() {
            toastr.error("Sorry! Something went wrong, please try again.");
            $("#btnSubmit").hide();
        }

        function openMrvReport(mrvNo) {
            var mrvReportUrl = "/MgcReports/MetarialReceiptVoucher?mrvNo=" + mrvNo;
            window.open(mrvReportUrl);
            toastr.info("Material Receipt Voucher Report is open in new window.");
        }
        function openJobReports(jobList) {
            for (var i = 1; i < jobList.length; i++) {
                var jobNo = jobList[i];
                var jobCardReportUrl = "/MgcReports/JobCardFormat?jobNo=" + jobNo;
                window.open(jobCardReportUrl);
                toastr.info("Job Card Report is open in new window.");
            }
        }

    </script>
}