                                <label id="lblDocDate" class="control-label col-md-4 small ">Doc Date:</label>
                                <div class="col-md-8 paddingLeftRight0">
                                    @Html.TextBoxFor(m => m.DOCDATE_BT, null, new { ID = "txtDocDate", @Value = DateTime.Today.Date.ToShortDateString(), Class = "form-control datepicker", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.DOCDATE_BT)
                                </div>
                            </div>
                        </div>
