@{
    ViewBag.Title = "DocumentReversal";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.currPage = "Document Reversal";
}
<!-- start:main -->
<div class="container">
    <div id="main">
        <!-- start:breadcrumb -->
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">@ViewBag.currPage</li>
        </ol>
        <!-- end:breadcrumb -->
        <fieldset>
            <legend>Document Reversal</legend>
            <div class="row">
                <div class="container">
                    @using (Ajax.BeginForm("SaveDocumentReversal", "Finance", null, new AjaxOptions { OnSuccess = "OnSuccess", OnFailure = "OnFailure" }, new { id = "formDocumentReversal", @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-4 small ">Doc Type</label>
                            <div class="col-md-8 paddingLeftRight0">
                                @Html.DropDownList("DocType", new SelectList(@ViewBag.DocType, "Key", "Value", "1"), new { ID = "ddlDocType", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-4 small ">Invoice Number</label>
                            <div class="col-md-8 paddingLeftRight0">
                                @Html.TextBox("InvNumber", null, new { ID = "txtInvNumber", Class = "form-control", @required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-4 small ">Doc Date</label>
                            <div class="col-md-8 paddingLeftRight0">
                                @Html.TextBox("DocDate", null, new { ID = "txtDocDate", Class = "form-control", @readonly = "readonly", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-4 small ">OtherRef</label>
                            <div class="col-md-8 paddingLeftRight0">
                                @Html.TextBox("OtherRef", null, new { ID = "txtOtherRef", Class = "form-control", @readonly = "readonly", @required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-4 small ">Acc. Code</label>
                            <div class="col-md-8 paddingLeftRight0">
                                @Html.TextBox("AccCode", null, new { ID = "txtAccCode", Class = "form-control", @readonly = "readonly", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-4 small ">Amount</label>
                            <div class="col-md-8 paddingLeftRight0">
                                @Html.TextBox("Amount", null, new { ID = "txtAmount", Class = "form-control", @readonly = "readonly", @required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-4 small ">Status</label>
                            <div class="col-md-8 paddingLeftRight0">
                                @Html.TextBox("Status", null, new { ID = "txtStatus", Class = "form-control", @readonly = "readonly", @required = "required" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                        </div>
                        <div class="col-md-6 form-group">
                            <label class="control-label col-md-4 small "></label>
                            <div class="col-md-8 paddingLeftRight0">
                                <input type="submit" id="btnSave" class="btn btn-success col-md-3 pull-right" value="Save">
                                <button type="button" id="btnNew" class="btn btn-success">New</button>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </fieldset>
    </div>
</div>
<!-- end:main -->
@section scripts
{
    <script src="@Url.Content("~/Scripts/Custom/Finance/DocumentReversal.js?1500")"></script>
    <script src="@Url.Content("~/Scripts/common.js")"></script>

    <script type="text/javascript">
        function OnSuccess(success) {
            if (success) {
                toastr.success("Document has been reversed Successfully.");
                $("#btnSave").hide();
            } else {
                toastr.error("Sorry! Something went wrong, please try again.");
            }

        }

        function OnFailure() {
            toastr.error("Sorry! Something went wrong, please try again.");
            //$("#btnSave").hide();
        }
    </script>
}